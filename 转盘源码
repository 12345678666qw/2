        .video-player::-webkit-media-controls-volume-slider { display: none; }
        .video-player::-webkit-media-controls-fullscreen-button { display: none; }
        
        .close-video { position: absolute; top: 30px; right: 30px; background: rgba(0, 0, 0, 0.7); color: white; border: 2px solid white; width: 50px; height: 50px; border-radius: 50%; font-size: 1.8rem; cursor: pointer; z-index: 101; display: flex; justify-content: center; align-items: center; transition: all 0.3s; }
        .close-video:hover { background: rgba(255, 0, 0, 0.7); transform: rotate(90deg); }
        
        .loading { text-align: center; margin-top: 20px; font-size: 1.2rem; background: #f8f9fa; padding: 10px 20px; border-radius: 10px; color: #7f8c8d; }
        .result { margin-top: 20px; font-size: 1.8rem; text-align: center; min-height: 70px; display: flex; align-items: center; justify-content: center; background: #f8f9fa; padding: 15px 30px; border-radius: 15px; width: 100%; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05); }
        .result-prize { font-weight: bold; color: #e74c3c; font-size: 2rem; }
        
