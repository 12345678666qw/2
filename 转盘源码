<body>
    <div class="container">
        <header>
            <h1>幸运大转盘抽奖</h1>
            <p class="subtitle">转动转盘，赢取惊喜大奖！</p>
        </header>
        
        <div class="content">
            <div class="wheel-container">
                <div class="pointer"></div>
                <div class="wheel" id="wheel">
                    <div class="wheel-section"><div class="section-content">状元</div></div>
                    <div class="wheel-section"><div class="section-content">参与奖1</div></div>
                    <div class="wheel-section"><div class="section-content">参与奖2</div></div>
                    <div class="wheel-section"><div class="section-content">参与奖3</div></div>
                    <div class="wheel-section"><div class="section-content">参与奖4</div></div>
                    <div class="wheel-section"><div class="section-content">参与奖5</div></div>
                </div>
            </div>
            
            <div class="prizes-info">
                <h2>奖项设置</h2>
                <ul class="prize-list">
                    <li class="prize-item"><span>状元</span><span>特等奖</span></li>
                    <li class="prize-item"><span>参与奖1</span><span>一等奖</span></li>
                    <li class="prize-item"><span>参与奖2</span><span>二等奖</span></li>
                    <li class="prize-item"><span>参与奖3</span><span>三等奖</span></li>
                    <li class="prize-item"><span>参与奖4</span><span>四等奖</span></li>
                    <li class="prize-item"><span>参与奖5</span><span>五等奖</span></li>
                </ul>
            </div>
        </div>
        
        <div class="controls">
            <button class="spin-btn" id="spinBtn">开始抽奖</button>
            <div class="loading" id="loading">视频加载中，请稍候...</div>
            <div class="result" id="result"></div>
        </div>
    </div>
    
    <div class="video-container" id="videoContainer">
        <button class="close-video" id="closeVideo">×</button>
        <video class="video-player" id="videoPlayer"></video>
        <div class="replay-prompt" id="replayPrompt">
            <p>视频播放完毕，是否重新播放？</p>
            <div class="replay-buttons">
                <button class="replay-btn replay-yes" id="replayYes">是</button>
                <button class="replay-btn replay-no" id="replayNo">否</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const wheel = document.getElementById('wheel');
            const spinBtn = document.getElementById('spinBtn');
            const result = document.getElementById('result');
            const loading = document.getElementById('loading');
            const videoContainer = document.getElementById('videoContainer');
            const videoPlayer = document.getElementById('videoPlayer');
            const closeVideo = document.getElementById('closeVideo');
            const replayPrompt = document.getElementById('replayPrompt');
            const replayYes = document.getElementById('replayYes');
            const replayNo = document.getElementById('replayNo');
            
            let currentPrize = null;
            const FIXED_ROTATION_COUNT = 5;
            
            const prizes = [
                { name: "状元", video: "https://raw.githubusercontent.com/12345678666qw/2/refs/heads/main/5ef9303111a910685bad08f415520d89.mp4" },
                { name: "参与奖1", video: "https://raw.githubusercontent.com/12345678666qw/2/refs/heads/main/250a271e1aa8a12b55c85e46e046f68c.mp4" },
                { name: "参与奖2", video: "https://raw.githubusercontent.com/12345678666qw/2/refs/heads/main/a4aed726f1ea371cd79555669ddbd083.mp4" },
                { name: "参与奖3", video: "https://raw.githubusercontent.com/12345678666qw/2/refs/heads/main/a41fb48c8f54cc4cfe1db71850d29122.mp4" },
                { name: "参与奖4", video: "https://raw.githubusercontent.com/12345678666qw/2/refs/heads/main/653046b2c1fc849e69b6205d3164a25e.mp4" },
                { name: "参与奖5", video: "https://raw.githubusercontent.com/12345678666qw/2/refs/heads/main/2c0b601932a2a57f80c0182c770c0fcc.mp4" }
            ];
            
            // 视频预加载
            let videosLoaded = 0;
            const totalVideos = prizes.length;
            const videoBuffers = {};
            
            spinBtn.disabled = true;
            
            prizes.forEach((prize, index) => {
                const video = document.createElement('video');
                video.src = prize.video;
                video.preload = 'auto';
                
                video.addEventListener('loadeddata', function() {
                    videosLoaded++;
                    updateLoadingProgress();
                    
                    if (videosLoaded === totalVideos) {
                        loading.textContent = "所有视频已加载完成，可以开始抽奖！";
                        spinBtn.disabled = false;
                    }
                });
                
                video.addEventListener('error', function() {
                    videosLoaded++;
                    updateLoadingProgress();
                    console.error(`视频加载失败: ${prize.name}`);
                    
                    if (videosLoaded === totalVideos) {
                        loading.textContent = "视频加载完成，可以开始抽奖（部分视频可能加载失败）";
                        spinBtn.disabled = false;
                    }
                });
                
                videoBuffers[prize.name] = video;
            });
            
            function updateLoadingProgress() {
                loading.textContent = `视频加载中: ${videosLoaded}/${totalVideos}`;
            }
            
            function spinWheel() {
                spinBtn.disabled = true;
                result.textContent = "";
                
                const prizeIndex = Math.floor(Math.random() * prizes.length);
                currentPrize = prizes[prizeIndex];
                
                const baseRotation = 360 * FIXED_ROTATION_COUNT;
                const sectionAngle = 360 / prizes.length;
                const targetAngle = baseRotation + (prizeIndex * sectionAngle) + (sectionAngle / 2);
                
                wheel.style.transform = `rotate(${targetAngle}deg)`;
                
                setTimeout(() => {
                    result.innerHTML = `恭喜您获得了: <span class="result-prize">${currentPrize.name}</span>`;
                    playPrizeVideo(currentPrize);
                    spinBtn.disabled = false;
                }, 5000);
            }
            
            function playPrizeVideo(prize) {
                const video = videoBuffers[prize.name];
                
                if (video) {
                    videoPlayer.src = prize.video;
                    videoPlayer.volume = (prize.name === "状元") ? 1.0 : 0.5;
                    
                    videoContainer.style.display = 'flex';
                    videoContainer.classList.add('landscape');
                    
                    videoPlayer.play().catch(e => {
                        console.error("视频播放失败:", e);
                    });
                    
                    videoPlayer.onended = function() {
                        replayPrompt.style.display = 'block';
                    };
                } else {
                    console.error(`未找到 ${prize.name} 的视频`);
                    alert(`恭喜获得 ${prize.name}！视频播放失败，请刷新页面重试。`);
                }
            }
            
            function closeVideoPlayer() {
                videoContainer.style.display = 'none';
                videoContainer.classList.remove('landscape');
                videoPlayer.pause();
                videoPlayer.currentTime = 0;
                replayPrompt.style.display = 'none';
            }
            
            function replayVideo() {
                videoPlayer.currentTime = 0;
                videoPlayer.play();
                replayPrompt.style.display = 'none';
            }
            
            // 显示"想屁吃"特效
            function showXiangPiChi() {
                const xiangPiChi = document.createElement('div');
                xiangPiChi.className = 'xiang-pi-chi';
                xiangPiChi.textContent = '想屁吃';
                document.body.appendChild(xiangPiChi);
                
                // 3秒后移除元素
                setTimeout(() => {
                    document.body.removeChild(xiangPiChi);
                }, 3000);
            }
            
            // 事件监听
            spinBtn.addEventListener('click', spinWheel);
            closeVideo.addEventListener('click', closeVideoPlayer);
            
            // 修改重复播放按钮事件
            replayYes.addEventListener('click', function() {
                closeVideoPlayer();
                showXiangPiChi();
            });
            
            replayNo.addEventListener('click', closeVideoPlayer);
            
            videoContainer.addEventListener('click', function(e) {
                if (e.target === videoContainer) {
                    closeVideoPlayer();
                }
            });
            
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && videoContainer.style.display === 'flex') {
                    closeVideoPlayer();
                }
            });
        });
    </script>
</body>
</html>
